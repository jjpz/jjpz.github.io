  "devDependencies": {
    "parcel": "^2.3.1",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.22"
  },
  "scripts": {
    "start": "parcel --no-cache --no-source-maps --open",
    "build": "npm run tw/build && npm run clean/dist && parcel build",
    "tw/watch": "tailwindcss -i src/css/style.css -o src/css/index.css --watch",
    "tw/build": "tailwindcss -i src/css/style.css -o src/css/index.css --minify",
    "clean/dist": "rimraf dist"
  },
